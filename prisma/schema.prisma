generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")                // pooler
  directUrl = env("POSTGRES_URL_NON_POOLING")    // direct (Vercel only)
}

model Job {
  id         String    @id @default(uuid())
  status     String    @default("pending")
  fileName   String?
  filePath   String?
  preview    Json?
  fullResult Json?
  isPaid     Boolean   @default(false)
  paidAt     DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}
